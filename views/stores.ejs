<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stores - Google File Search</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="nav-brand">Google File Search</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/stores" class="active">Stores</a></li>
      </ul>
    </div>
  </nav>

  <main class="container">
    <div class="page-header">
      <h1>File Search Stores</h1>
      <button class="btn btn-primary" onclick="showCreateStoreModal()">Create Store</button>
    </div>

    <div id="stores-container" class="stores-grid">
      <div class="loading">Loading stores...</div>
    </div>

    <div id="create-store-modal" class="modal">
      <div class="modal-content">
        <h2>Create New Store</h2>
        <form id="create-store-form">
          <div class="form-group">
            <label for="store-name">Store Name</label>
            <input type="text" id="store-name" name="displayName" required>
          </div>
          <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="hideCreateStoreModal()">Cancel</button>
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>Powered by Google Gemini API</p>
    </div>
  </footer>

  <!-- Templates -->
  <template id="store-card-template">
    <div class="store-card">
      <h3 class="store-title"></h3>
      <p class="store-name"></p>
      <div class="store-actions">
        <a class="btn btn-primary open-btn">Open</a>
        <button class="btn btn-danger delete-btn">Delete</button>
      </div>
    </div>
  </template>

  <script src="/js/dom-helpers.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
