<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Store Details - Google File Search</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/marked/lib/marked.umd.js"></script>
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="nav-brand">Google File Search</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/stores">Stores</a></li>
      </ul>
    </div>
  </nav>

  <main class="container">
    <div class="page-header">
      <div>
        <a href="/stores" class="back-link">← Back to Stores</a>
        <h1 id="store-title">Loading...</h1>
      </div>
      <div class="header-actions">
        <button class="btn btn-secondary" onclick="showRenameModal()">Rename Store</button>
        <button class="btn btn-primary" onclick="showUploadModal()">Upload File</button>
      </div>
    </div>

    <div class="store-layout">
      <section class="search-section">
        <h2>Search Documents</h2>
        <form id="search-form">
          <div class="search-input-group">
            <textarea id="search-query" name="query" rows="3" placeholder="Ask a question about your documents..." required></textarea>
            <input type="text" id="metadata-filter" name="metadataFilter" placeholder="Metadata filter (e.g., author=John Doe)" class="metadata-filter-input">
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </form>

        <div id="search-results" class="search-results"></div>
      </section>

      <aside id="sidebar" class="sidebar">
        <div class="sidebar-header">
          <button id="sidebar-toggle" class="sidebar-toggle" onclick="toggleSidebar()">
            <span id="toggle-icon">◀</span>
          </button>
        </div>

        <div class="sidebar-content">
          <div class="sidebar-tabs">
            <button class="tab-btn active" data-tab="citations" onclick="switchTab('citations')">Citations</button>
            <button class="tab-btn" data-tab="documents" onclick="switchTab('documents')">Documents</button>
          </div>

          <div id="citations-tab" class="tab-content active">
            <div id="citations-container">
              <p class="empty-state">Search to see citations here</p>
            </div>
          </div>

          <div id="documents-tab" class="tab-content">
            <div class="documents-header">
              <h3>Documents</h3>
              <button class="btn btn-secondary btn-sm" onclick="loadDocuments()">Refresh</button>
            </div>
            <div id="documents-container" class="documents-list">
              <div class="loading">Loading documents...</div>
            </div>
          </div>
        </div>
      </aside>
    </div>

    <div id="rename-modal" class="modal">
      <div class="modal-content">
        <h2>Rename Store</h2>
        <form id="rename-form">
          <div class="form-group">
            <label for="new-store-name">New Display Name</label>
            <input type="text" id="new-store-name" name="displayName" required>
          </div>
          <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="hideRenameModal()">Cancel</button>
            <button type="submit" class="btn btn-primary">Rename</button>
          </div>
        </form>
      </div>
    </div>

    <div id="upload-modal" class="modal">
      <div class="modal-content">
        <h2>Upload File</h2>
        <form id="upload-form" enctype="multipart/form-data">
          <div class="form-group">
            <label for="file-input">Select File</label>
            <input type="file" id="file-input" name="file" required>
            <small>Max size: 100MB. Supports PDF, DOCX, code files, and more.</small>
          </div>
          <div class="form-group">
            <label for="file-display-name">Display Name (optional)</label>
            <input type="text" id="file-display-name" name="displayName">
          </div>
          <details class="advanced-options">
            <summary>Advanced Options</summary>
            <div class="form-group">
              <label for="custom-metadata">Custom Metadata (JSON)</label>
              <textarea id="custom-metadata" name="customMetadata" rows="3" placeholder='{"author": "Isaac Asimov", "genre": "Sci-Fi", "year": "1950"}'></textarea>
              <small>Add metadata as simple JSON object - will be converted to API format automatically</small>
            </div>
            <div class="form-group">
              <label for="max-tokens">Max Tokens Per Chunk</label>
              <input type="number" id="max-tokens" name="maxTokensPerChunk" placeholder="e.g., 512">
            </div>
            <div class="form-group">
              <label for="max-overlap">Max Overlap Tokens</label>
              <input type="number" id="max-overlap" name="maxOverlapTokens" placeholder="e.g., 50">
            </div>
          </details>
          <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="hideUploadModal()">Cancel</button>
            <button type="submit" class="btn btn-primary">Upload</button>
          </div>
        </form>
        <div id="upload-progress" class="upload-progress"></div>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>Powered by Google Gemini API</p>
    </div>
  </footer>

  <!-- Templates -->
  <template id="document-item-template">
    <div class="document-item">
      <div class="document-summary">
        <div class="document-main-info">
          <h4 class="doc-title"></h4>
          <span class="document-meta"></span>
        </div>
        <button class="btn btn-danger btn-sm delete-btn">Delete</button>
      </div>
      <div class="document-details" style="display: none;">
        <div class="detail-row"><strong>Document ID:</strong> <span class="doc-id"></span></div>
        <div class="detail-row"><strong>Display Name:</strong> <span class="doc-display-name"></span></div>
        <div class="detail-row"><strong>Created:</strong> <span class="doc-created"></span></div>
        <div class="detail-row"><strong>Size:</strong> <span class="doc-size"></span></div>
        <div class="detail-row"><strong>MIME Type:</strong> <span class="doc-mime"></span></div>
        <div class="detail-row"><strong>State:</strong> <span class="doc-state"></span></div>
        <div class="detail-row metadata-row" style="display: none;">
          <strong>Metadata:</strong><br>
          <div class="metadata-tags"></div>
        </div>
      </div>
    </div>
  </template>

  <template id="metadata-tag-template">
    <span class="metadata-tag"></span>
  </template>

  <template id="citation-item-template">
    <div class="citation-item">
      <div class="citation-header">
        <span class="citation-ref"></span>
        <span class="citation-doc"></span>
      </div>
      <details class="citation-details">
        <summary class="citation-preview"></summary>
        <div class="citation-full-text"></div>
      </details>
    </div>
  </template>

  <template id="citation-web-item-template">
    <div class="citation-item">
      <div class="citation-header">
        <span class="citation-ref"></span>
        <a class="citation-doc" target="_blank"></a>
      </div>
    </div>
  </template>

  <script src="https://cdn.jsdelivr.net/npm/dompurify@3/dist/purify.min.js"></script>
  <script src="/js/dom-helpers.js"></script>
  <script>
    const STORE_NAME = <%- JSON.stringify(storeName) %>;
  </script>
  <script src="/js/app.js"></script>
</body>
</html>
